{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-g",
                "-I/opt/homebrew/opt/raylib/include",  // Caminho para os cabeçalhos da Raylib
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-L/opt/homebrew/opt/raylib/lib",  // Caminho para as bibliotecas da Raylib
                "-lraylib",  // Linka a biblioteca Raylib
                "-framework", "OpenGL",  // Linka com OpenGL (requerido para Raylib no macOS)
                "-framework", "Cocoa",   // Framework Cocoa para suporte a interface gráfica no macOS
                "-framework", "IOKit",   // Framework IOKit para gerenciamento de entrada no macOS
                "-framework", "CoreVideo" // Framework CoreVideo para vídeo no macOS
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}